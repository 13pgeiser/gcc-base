ENV DEBIAN_FRONTEND=noninteractive

RUN set -ex \
	&& apt-get update \
	&& apt-get dist-upgrade -y \
	&& apt-get install -y \
		autoconf \
		autoconf-archive \
		automake \
		bison \
		build-essential \
		bzip2 \
		ca-certificates \
		cmake \
		curl \
		figlet \
		file \
		flex \
		git \
		gzip \
		lsb-release \
		lzip \
		p7zip-full \
		texinfo \
		wget \
		xz-utils \
		zlib1g-dev \
		gcc-multilib \
		python3-dev \
	&& apt-get clean \
	&& rm -rf /var/cache/apt/archives/* /var/lib/apt/lists/*

RUN set -ex \
	&& dpkg --add-architecture i386 \
	&& apt-get update \
	&& apt-get install -y \
		wine32 \
		wine64 \
	&& apt-get clean \
	&& rm -rf /var/cache/apt/archives/* /var/lib/apt/lists/*

ENV WRK_DIR /workdir
